<Page x:Class="IntentConnectWeighing.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntentConnectWeighing"   
      xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
      xmlns:myControl ="clr-namespace:MyCustomControlLibrary;assembly=MyCustomControlLibrary"
      mc:Ignorable="d"  Loaded="Page_Loaded"  Unloaded="Page_Unloaded"
      d:DesignHeight="500" d:DesignWidth="900" 
      Title="ReportPage">
    <Page.Resources>
        <ContextMenu x:Key="ContextMenu" Style="{StaticResource DefaultContextMenu}">
            <MenuItem x:Name="RefreshContextBtn" Icon="&#xe662;" Style="{StaticResource DefaultMenuItem}" IsEnabled="True" Header=" 刷新 " local:ControlAttachProperty.IconSize="18" Click="RefreshContextBtn_Click"/>
        </ContextMenu>
        <Style x:Key="AlertTbStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="4,2,10,2"/>
            <Setter Property="Foreground" Value="#777777"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ValueCbStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#777777"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value=" 2,2,0,2"/>
            <Setter Property="Height" Value="24"/>
        </Style>
    </Page.Resources>
    <Grid Background="White" Margin="0,0,0,5" ContextMenu="{StaticResource ContextMenu}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--UpBorder-->
        <Border x:Name="UpBorder" Grid.Row="0">
            <StackPanel>
                <StackPanel Height="34" x:Name="ToolBarPanel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,0" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <myControl:TabButton     
                            x:Name="TodayInTabBtn" Checked="TodayInTabBtn_Checked"
                             FontSize="14" IsChecked="False"
                             Width="70" Height="30"                    
                            Foreground="#666"
                            ActiveForground="RoyalBlue"
                            IndicatorHeight="2" 
                            Margin="0,0,4,0"
                            IconMargin="0,0,3,0"
                            IconSize="18"         
                            Content="入库图表"
                            ActiveIndicatorColor="RoyalBlue"/>
                        <myControl:TabButton   
                            x:Name="TodayOutTabBtn" Checked="TodayOutTabBtn_Checked"
                            Width="70" Height="30"  FontSize="14"
                            IsChecked="False"
                            ActiveForground="RoyalBlue" 
                            Foreground="#666"
                            IndicatorHeight="3" 
                            Margin="0,0,4,0"
                            IconMargin="0,0,3,0"
                            IconSize="18"                   
                            ActiveIndicatorColor="RoyalBlue"
                            Content="出库图表"/>
                        <myControl:TabButton 
                            x:Name="TodaySummaryTabBtn" Checked="TodaySummaryTabBtn_Checked"
                            Width="70" Height="30"  FontSize="14"
                            IsChecked="False"
                            ActiveForground="RoyalBlue" 
                            Foreground="#666"
                            IndicatorHeight="3" 
                            Margin="0,0,4,0"                  
                            IconMargin="0,0,3,0"
                            IconSize="18"
                            Content="汇总图表"
                            ActiveIndicatorColor="RoyalBlue" />
                        <myControl:TabButton 
                            x:Name="InDetialReportTabBtn" Checked="InDetialReportTabBtn_Checked"
                            Width="90" Height="30"  FontSize="14"
                            IsChecked="True"
                            ActiveForground="RoyalBlue" 
                            Foreground="#666"
                            IndicatorHeight="3" 
                            Margin="0,0,30,0"                  
                            IconMargin="0,0,3,0"
                            IconSize="18"
                            Content="入库明细报表"
                            ActiveIndicatorColor="RoyalBlue" />
                        <myControl:TabButton 
                            x:Name="OutDetialReportTabBtn" Checked="OutDetialReportTabBtn_Checked"
                            Width="90" Height="30"  FontSize="14"
                            IsChecked="False"
                            ActiveForground="RoyalBlue" 
                            Foreground="#666"
                            IndicatorHeight="3" 
                            Margin="0,0,30,0"                  
                            IconMargin="0,0,3,0"
                            IconSize="18"
                            Content="出库明细报表"
                            ActiveIndicatorColor="RoyalBlue" />
                        
                        <myControl:IconButton                
                           x:Name="ReportPrintBtn" 
                           IsTransparency="True"
                           MouseOverForeground="{DynamicResource myBlue}"
                           VerticalAlignment="Bottom" ToolTip="打印报表"
                           IsShowIcon="True" Icon="&#xe65b;" IconSize="28"
                           Width="30" Height="30" IconMargin="-2,0,0,0"
                            Margin="0,0,4,0" />
                        <myControl:IconButton           
                            x:Name="SearchTabBtn"
                            Click="SearchTabBtn_Click"
                           IsTransparency="True"
                           MouseOverForeground="{DynamicResource myBlue}"
                           VerticalAlignment="Bottom" ToolTip="按条件查询"
                           IsShowIcon="True" Icon="&#xe86e;" IconSize="28"
                           Width="30" Height="30" IconMargin="-2,0,0,0"
                            Margin="0,0,4,0"
                         />
                        <myControl:IconButton         
                          x:Name="ExportExcelBtn"
                          Click="ExportExcelBtn_Click"
                          IsTransparency="True"
                           MouseOverForeground="{DynamicResource myBlue}"
                           VerticalAlignment="Bottom" ToolTip="导出到电子表格"
                           IsShowIcon="True" Icon="&#xe6df;" IconSize="28"
                           Width="30" Height="30" IconMargin="-2,0,0,0"
                            Margin="0,0,4,0"
                         />
                        <myControl:IconButton       
                          IsTransparency="True"
                           MouseOverForeground="{DynamicResource myBlue}"
                           VerticalAlignment="Bottom" 
                           IsShowIcon="True" Icon="&#xe8c4;" IconSize="28"
                           Width="30" Height="30" IconMargin="-2,0,0,0"
                            Margin="0,0,4,0"
                         />
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="1" Margin="2,0,0,0" Background="{DynamicResource E4}"></StackPanel>                
            </StackPanel>
        </Border>
        <!--search Border-->
        <Border x:Name="CenderBorder" Grid.Row="1" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0" x:Name="searchAreaPanel" Height="60">
                <StackPanel>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="发货公司:"/>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="收货公司:"/>
                </StackPanel>
                <StackPanel>
                    <ComboBox x:Name="sendCompanyCB" DisplayMemberPath="name" Style="{StaticResource ValueCbStyle}" TextBoxBase.TextChanged="sendCompanyCB_TextChanged" SelectionChanged="sendCompanyCB_SelectionChanged"/>
                    <ComboBox x:Name="receiveCompanyCB" DisplayMemberPath="name" Style="{StaticResource ValueCbStyle}"  TextBoxBase.TextChanged="receiveCompanyCB_TextChanged" SelectionChanged="receiveCompanyCB_SelectionChanged"/>
                </StackPanel>


                <StackPanel>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="发货货场:"/>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="收货货场:"/>
                </StackPanel>
                <StackPanel>
                    <ComboBox x:Name="sendYandCB" DisplayMemberPath="name" Style="{StaticResource ValueCbStyle}" Width="160" IsReadOnly="True" SelectionChanged="sendYandCB_SelectionChanged"/>
                    <ComboBox x:Name="receiveYandCB" DisplayMemberPath="name" Style="{StaticResource ValueCbStyle}" Width="160" IsReadOnly="True" SelectionChanged="receiveYandCB_SelectionChanged"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="起始时间:"/>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="物资名称:"/>
                </StackPanel>
                <StackPanel>
                    <DatePicker x:Name="StratDatePicker" SelectedDateFormat="Long"  Margin="0,2,0,2" Height="24" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="MaterialNameCB" DisplayMemberPath="name" Style="{StaticResource ValueCbStyle}" Width="120" TextBoxBase.TextChanged="MaterialNameCB_TextChanged" SelectionChanged="MaterialNameCB_SelectionChanged"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="结束时间:"/>
                    <TextBlock Style="{StaticResource AlertTbStyle}" Text="车 牌 号:"/>
                </StackPanel>
                <StackPanel>
                    <DatePicker x:Name="EndDatePicker" SelectedDateFormat="Long"  Margin="0,2,0,2" Height="24" VerticalContentAlignment="Center" />
                    <ComboBox x:Name="CarNumberCB"  DisplayMemberPath="carNumber" Style="{StaticResource ValueCbStyle}" Width="110" TextBoxBase.TextChanged="CarNumberCB_TextChanged" SelectionChanged="CarNumberCB_SelectionChanged"/>
                </StackPanel>
                <myControl:IconButton 
                    x:Name="SearchBtn" 
                    Click="SearchBtn_Click"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="1"
                    IsShowIcon="False"
                    Margin="10,0,15,0"                                   
                    BorderBrush="#e0e0e0" 
                    Foreground="#666"
                    BorderThickness="1" 
                    Width="50"
                    Height="40"                 
                    CornerRadius="4"                                      
                    FontWeight="Bold" 
                    HorizontalAlignment="Center"      
                    HorizontalContentAlignment="Center"
                    MouseOverForeground="White"
                    MouseOverBackground="{StaticResource myBlue}" Content="查 询" />
            </StackPanel>
        </Border>
        <!--DownBorder-->
        <Border x:Name="DownBorder" Grid.Row="2">
            <myControl:MyScrollViewer
                Height="{Binding ElementName=DownBorder,Path=ActualHeight}"
                x:Name="ContentScrollViewer"
                Background="Transparent"       
                VerticalScrollBarVisibility="Visible"
                Width="{Binding ElementName=RightContentBorderPanel,Path=ActualWidth}" >

                <StackPanel VerticalAlignment="Top">
                    <!-- in chart-->
                    <StackPanel x:Name="InChartPanel" Visibility="{Binding Path=IsChecked,ElementName=TodayInTabBtn,Converter={StaticResource CheckedToVisibleConverter}}"  Margin="0,10,0,0" >
                        <Grid Margin="20,0,20,0"  x:Name="InGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="Auto" MinHeight="480"/>                         
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="{Binding Title}" FontSize="18"  FontWeight="Bold" HorizontalAlignment="Center" />
                                <TextBlock Text="入库图表" FontSize="14"  HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <DockPanel >
                                    <TextBlock Text="{Binding YardName}"   VerticalAlignment="Center" TextAlignment="Center" Padding="8,0,0,0"/>
                                    <TextBlock Text="{Binding DateArea}"   VerticalAlignment="Center" TextAlignment="Center" Padding="14,0,0,0"/>
                                    <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" Text="{Binding PrintTime}"  VerticalAlignment="Center" Padding="0,0,4,0"/>
                                    <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" Text="打印时间:"  VerticalAlignment="Center" TextAlignment="Center" Padding="4,0,0,0"/>
                                </DockPanel>
                            </StackPanel>
                            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1,1,1,1">
                                <Grid >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <vc:Chart  View3D="True" Grid.Column="0" Grid.Row="0" BorderThickness="0" x:Name="InMaterialCarChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按煤种统计车数"/>
                                        </vc:Chart.Titles>
                                   
                                        <vc:Chart.Series>
                                            <vc:DataSeries RenderAs="Pie" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="24"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="27"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="20"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="30"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="19"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="31"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="26"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="27"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="29"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>
                                        </vc:Chart.Series>
                                    </vc:Chart>

                                    <vc:Chart View3D="True" Grid.Column="1" Grid.Row="0" BorderThickness="0" x:Name="InMaterialTonChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按煤种统计吨数(t）"/>
                                        </vc:Chart.Titles>
                                        <vc:Chart.AxesX>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="45" Enabled="True"></vc:AxisLabels>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesX>
                                        <vc:Chart.AxesY>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="-45" Enabled="True"/>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesY>
                                        <vc:Chart.Series>

                                            <vc:DataSeries RenderAs="Radar" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="240"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="200"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="300"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="190"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="310"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="260"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="290"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>
                                         
                                        </vc:Chart.Series>
                                    </vc:Chart>
                                    
                                    <vc:Chart View3D="True" Grid.Column="0" Grid.Row="1" BorderThickness="0" x:Name="InCompanyCarChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按发货公司统计车数"/>
                                        </vc:Chart.Titles>
                                        <vc:Chart.AxesX>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="45" Enabled="True"></vc:AxisLabels>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesX>
                                        <vc:Chart.AxesY>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="-45" Enabled="True"/>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesY>
                                        <vc:Chart.Series>

                                            <vc:DataSeries RenderAs="Doughnut" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="240"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="200"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="300"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="190"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="310"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="260"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="290"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>

                                        </vc:Chart.Series>
                                    </vc:Chart>
                                    
                                    <vc:Chart View3D="True" Grid.Column="1" Grid.Row="1" BorderThickness="0" x:Name="InCompanyTonChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按发货公司统计吨数(t）"/>
                                        </vc:Chart.Titles>
                                        <vc:Chart.AxesX>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="45" Enabled="True"></vc:AxisLabels>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesX>
                                        <vc:Chart.AxesY>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="-45" Enabled="True"/>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesY>
                                        <vc:Chart.Series>

                                            <vc:DataSeries RenderAs="Radar" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="240"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="200"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="300"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="190"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="310"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="260"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="290"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>

                                        </vc:Chart.Series>
                                    </vc:Chart>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                    <!--out chart-->
                    <StackPanel x:Name="OutChartStackPanel" Visibility="{Binding Path=IsChecked,ElementName=TodayOutTabBtn,Converter={StaticResource CheckedToVisibleConverter}}" HorizontalAlignment="Stretch">
                        <Grid Margin="30,10,30,10"  x:Name="OutChartGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="Auto" MinHeight="480"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="{Binding Title}" FontSize="18"  FontWeight="Bold" HorizontalAlignment="Center" />
                                <TextBlock Text="出库图表" FontSize="14"  HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <DockPanel >
                                    <TextBlock Text="{Binding YardName}"   VerticalAlignment="Center" TextAlignment="Center" Padding="8,0,0,0"/>
                                    <TextBlock Text="{Binding DateArea}"   VerticalAlignment="Center" TextAlignment="Center" Padding="14,0,0,0"/>
                                    <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" Text="{Binding PrintTime}"  VerticalAlignment="Center" Padding="0,0,4,0"/>
                                    <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" Text="打印时间:"  VerticalAlignment="Center" TextAlignment="Center" Padding="4,0,0,0"/>
                                </DockPanel>
                            </StackPanel>

                            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1,1,1,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>                                   
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <vc:Chart  View3D="True" Grid.Column="0" Grid.Row="0" BorderThickness="0" x:Name="OutMaterialCarChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按煤种统计车数"/>
                                        </vc:Chart.Titles>

                                        <vc:Chart.Series>
                                            <vc:DataSeries RenderAs="Pie" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="24"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="27"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="20"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="30"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="19"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="31"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="26"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="27"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="29"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>
                                        </vc:Chart.Series>
                                    </vc:Chart>

                                    <vc:Chart View3D="True" Grid.Column="1" Grid.Row="0"  BorderThickness="0" x:Name="OutMaterialTonChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按煤种统计吨数(t）"/>
                                        </vc:Chart.Titles>
                                        <vc:Chart.AxesX>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="45" Enabled="True"></vc:AxisLabels>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesX>
                                        <vc:Chart.AxesY>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="-45" Enabled="True"/>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesY>
                                        <vc:Chart.Series>

                                            <vc:DataSeries RenderAs="Radar" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="240"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="200"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="300"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="190"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="310"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="260"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="wwa" YValue="290"></vc:DataPoint>
                                                </vc:DataSeries.DataPoints>

                                            </vc:DataSeries>

                                        </vc:Chart.Series>
                                    </vc:Chart>

                                    <vc:Chart View3D="True" Grid.Column="0" Grid.Row="1" BorderThickness="0" x:Name="OutCompanyCarChart">
                                        <vc:Chart.Titles>
                                            <vc:Title Text="按收货公司统计车数"/>
                                        </vc:Chart.Titles>
                                        <vc:Chart.AxesX>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="45" Enabled="True"></vc:AxisLabels>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesX>
                                        <vc:Chart.AxesY>
                                            <vc:Axis>
                                                <vc:Axis.AxisLabels>
                                                    <vc:AxisLabels Angle="-45" Enabled="True"/>
                                                </vc:Axis.AxisLabels>
                                            </vc:Axis>
                                        </vc:Chart.AxesY>
                                        <vc:Chart.Series>

                                            <vc:DataSeries RenderAs="Doughnut" LegendText="Car(车)">
                                                <vc:DataSeries.DataPoints>
                                                    <vc:DataPoint AxisXLabel="aaa" YValue="240"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="bba" YValue="270"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="cca" YValue="200"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="dda" YValue="300"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="eea" YValue="190"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="ffa" YValue="310"></vc:DataPoint>
                                                    <vc:DataPoint AxisXLabel="gga" YValue="260"></vc:DataPoint>

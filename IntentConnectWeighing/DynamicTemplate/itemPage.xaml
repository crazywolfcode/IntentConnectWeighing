<Page x:Class="IntentConnectWeighing.itemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntentConnectWeighing"
      mc:Ignorable="d" 
      d:DesignHeight="80" d:DesignWidth="250"
      Title="Page"
   >
    <StackPanel Orientation="Horizontal">
    <Image x:Name="logo" Source="/IntentConnectWeighing;component/Themes/Img/Temp/loginbg01.jpg" Width="80"  VerticalAlignment="Center"></Image>
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock x:Name="CompanyName" Text="{StaticResource CompanyName}"></TextBlock>
        <TextBlock x:Name="UserName" Text="{StaticResource UserName}"></TextBlock>
    </StackPanel>
          <Button Style="{DynamicResource ImageButtonStyleTwo}" Width="30" Height="30" BorderBrush="{x:Null}" Click="AddBtn_Click" x:Name="AddBtn"></Button>
    </StackPanel>
</Page>
